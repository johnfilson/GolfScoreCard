<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@android:color/darker_gray"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/holeNumberItem"
        android:layout_weight="3"
        tools:text="Hole 1:"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/scoreItem"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:text="3"
        android:textSize="20sp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/minusButton"
        android:layout_weight="1"
        tools:text="-"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/scoreItem"
        android:layout_alignLeft="@+id/scoreItem"
        android:layout_alignStart="@+id/scoreItem"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="+"
        android:id="@+id/plusButton"
        android:layout_alignTop="@+id/minusButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        />
</LinearLayout>